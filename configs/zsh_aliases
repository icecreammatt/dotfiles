# OSX
alias flushdns='sudo dscacheutil -flushcache;sudo killall -HUP mDNSResponder;'

unalias gd
function gd() {
    if icdiff 2>/dev/null; then
        git icdiff | less
    else
        git diff
    fi
}

cover () { 
    t="/tmp/go-cover.$$.tmp"
    go test -coverprofile=$t $@ && go tool cover -html=$t && unlink $t
}
